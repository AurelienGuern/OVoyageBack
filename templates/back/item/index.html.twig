{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des items{% endblock %}

{% block body %}
    <h1>Items</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Validé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.checked ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_back_item_show', {'id': item.id}) }}" class="btn btn-info btn-sm">détail</a>
                    <a href="{{ path('app_back_item_edit', {'id': item.id}) }}" class="btn btn-warning btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_item_new') }}" class="btn btn-success">Nouveau</a>
{% endblock %}
