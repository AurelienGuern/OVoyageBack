{% extends 'back/base_back.html.twig' %}

{% block title %}{{country.name}}{% endblock %}

{% block body %}
    <h1>{{country.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>CountryPicture</th>
                <td>{{ country.countryPicture }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ country.updatedAt ? country.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CountryPictureURL</th>
                <td>{{ country.countryPictureURL }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_country_index') }}">Retour</a>

    <a href="{{ path('app_back_country_edit', {'id': country.id}) }}">modifier</a>

    {{ include('back/country/_delete_form.html.twig') }}
{% endblock %}
