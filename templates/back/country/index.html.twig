{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des pays{% endblock %}

{% block body %}
    <h1>Liste des pays</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.name }}</td>
                <td>{{ country.countryPicture }}</td>
                <td>
                    <a href="{{ path('app_back_country_show', {'id': country.id}) }}" class="btn btn-info btn-sm">détail</a>
                    <a href="{{ path('app_back_country_edit', {'id': country.id}) }}" class="btn btn-warning btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">aucun pays trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_country_new') }}" class="btn btn-success">Nouveau pays</a>
{% endblock %}
