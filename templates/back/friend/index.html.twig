{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des amis{% endblock %}

{% block body %}
    <h1>Liste des amis</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Relation</th>
                <th>Créée par</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friend in friends %}
            <tr>
                <td>{{ friend.id }}</td>
                <td>{{ friend.relationship ? 'Yes' : 'No' }}</td>
                <td>{{ friend.createdBy ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_back_friend_show', {'id': friend.id}) }}" class="btn btn-info btn-sm">détail</a>
                    <a href="{{ path('app_back_friend_edit', {'id': friend.id}) }}" class="btn btn-warning btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_friend_new') }}" class="btn btn-success">Nouveau</a>
{% endblock %}
