{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des voyages{% endblock %}

{% block body %}
    <h1>Liste des voyages</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Image</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for trip in trips %}
                <tr>
                    <td>{{ trip.id }}</td>
                    <td>{{ trip.name }}</td>
                    <td>{{ trip.startDate ? trip.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.endDate ? trip.endDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.description }}</td>
                    <td>{{ trip.backgroundPicture }}</td>
                    <td>{{ trip.backgroundPictureURL }}</td>
                    <td>{{ trip.createdAt ? trip.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ trip.updatedAt ? trip.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_back_trip_show', {'id': trip.id}) }}" class="btn btn-info btn-sm">Détails</a>
                        <a href="{{ path('app_back_trip_edit', {'id': trip.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Pas de voyage trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_trip_new') }}" class="btn btn-success">Nouveau voyage</a>
{% endblock %}
