{% extends 'back/base_back.html.twig' %}

{% block title %}Liste des villes {% endblock %}

{% block body %}
    <h1>Liste des villes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td>
                    <a href="{{ path('app_back_city_show', {'id': city.id}) }}" class="btn btn-info btn-sm">détail</a>
                    <a href="{{ path('app_back_city_edit', {'id': city.id}) }}" class="btn btn-warning btn-sm">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune ville trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_city_new') }}" class="btn btn-success">Nouvelle ville</a>
{% endblock %}
