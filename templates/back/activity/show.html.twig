{% extends 'back/base_back.html.twig' %}

{% block title %}Activit√©{% endblock %}

{% block body %}
    <h1>{{activity.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ activity.date ? activity.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ activity.postalAddress }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ activity.price }}</td>
            </tr>
            <tr>
                <th>Horaires d'ouverture</th>
                <td>{{ activity.openingTimeAndDays }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ activity.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_activity_index') }}">Retour</a>

    <a href="{{ path('app_back_activity_edit', {'id': activity.id}) }}">Modifier</a>

    {{ include('back/activity/_delete_form.html.twig') }}
{% endblock %}
